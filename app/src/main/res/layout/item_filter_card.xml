<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/first_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/card_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_margin="12dp"
                tools:src="@drawable/arachidi" />

            <TextView
                android:id="@+id/card_tilte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/card_filter"
                android:layout_alignBottom="@+id/card_filter"
                android:layout_toEndOf="@id/card_filter"
                android:layout_marginStart="36dp"
                android:gravity="center_vertical|center_horizontal"
                tools:text="@string/arachidi"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/first_checkbox"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_alignBottom="@+id/card_filter"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="24dp"
                android:background="@drawable/icon_empty"
                android:button="@color/white"
                android:checked="false"
                android:visibility="invisible"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
