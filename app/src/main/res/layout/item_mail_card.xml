<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/first_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/card_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_margin="12dp"
                tools:src="@drawable/image_mail" />

            <TextView
                android:id="@+id/mail_tilte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="18dp"
                android:layout_toEndOf="@id/card_mail"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:text="@string/mail_description" />

            <TextView
                android:id="@+id/mail_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mail_tilte"
                android:layout_alignStart="@id/mail_tilte"
                android:layout_marginTop="26dp"
                android:layout_toEndOf="@id/card_mail"
                android:elevation="5dp"
                android:textColor="@color/gray"
                android:textSize="16sp"
                tools:text="@string/data_mail" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@id/first_card"
        android:layout_marginStart="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="12dp"
        android:background="@color/graySoft" />

</RelativeLayout>
