<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/first_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/card_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_margin="12dp"
                tools:src="@drawable/image_mail" />

            <TextView
                android:id="@+id/mail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@id/card_mail"
                android:textColor="@color/black80"
                android:textSize="16sp"
                tools:text="@string/mail_description" />

            <TextView
                android:id="@+id/mail_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_mail"
                android:layout_alignStart="@id/mail_title"
                android:layout_marginStart="1dp"
                android:textColor="@color/gray"
                android:textSize="16sp"
                tools:text="@string/data_mail" />

            <View
                android:id="@+id/divider"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@id/mail_data"
                android:layout_alignParentStart="true"
                android:layout_margin="18dp"
                android:background="@color/graySoft" />
        </RelativeLayout>



</RelativeLayout>
