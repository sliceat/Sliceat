<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/onBoardingImage"
        android:layout_width="228dp"
        android:layout_height="189dp"
        android:contentDescription="@string/onboardingimage"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textOnBoarding" />

    <TextView
        android:id="@+id/textOnBoarding"
        android:layout_width="246sp"
        android:layout_height="111sp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/im"
        android:layout_width="228dp"
        android:layout_height="189dp"
        app:layout_constraintStart_toStartOf="@+id/onBoardingImage"
        app:layout_constraintEnd_toEndOf="@+id/onBoardingImage"
        app:layout_constraintBottom_toBottomOf="@+id/onBoardingImage"
        app:layout_constraintTop_toTopOf="@+id/onBoardingImage"
        android:src="@drawable/undraw_map"/>

</androidx.constraintlayout.widget.ConstraintLayout>
