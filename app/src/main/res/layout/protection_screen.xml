<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.privacy.ProtectionScreen">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textPrivacy"
                style="@style/textPrivacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="@string/privacy"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/barBlackAndWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/black_and_white_bar"
                app:layout_constraintTop_toBottomOf="@id/textPrivacy" />

            <TextView
                android:id="@+id/textPrivacy2"
                style="@style/textPrivacy"
                android:layout_width="246sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="@string/privacy"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/barBlackAndWhite" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    
</androidx.constraintlayout.widget.ConstraintLayout>
