<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="style_date_picker_dialog" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:windowIsFloating">true</item>
        <item name="android:datePickerStyle">@style/style_datepicker</item>
    </style>

    <style name="style_datepicker" parent="android:Widget.Material.Light.DatePicker">
        <item name="android:datePickerMode">spinner</item>
        <item name="colorAccent">@android:color/holo_orange_dark</item>
    </style>

    <style name="title">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">2.4sp</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">2.3sp</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="authenticationTitle1">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">25sp</item>
        <item name="android:lineSpacingExtra">3.0sp</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="authenticationText">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">2.1sp</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="myButton">
        <item name="android:background">@drawable/ic_accedi_fb</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">1.9sp</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="myButton.authentication">
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="textTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">3.0sp</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="big_title">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">40sp</item>
        <item name="android:lineSpacingExtra">4.9sp</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:fillViewport">true</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:fastScrollAlwaysVisible">true</item>
    </style>
</resources>
